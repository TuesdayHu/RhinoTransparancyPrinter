<Window x:Class="TransparencyPrinter.PrinterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransparencyPrinter"
        mc:Ignorable="d"
        Title="TransparencyPrinter" Height="450" Width="300" ResizeMode="NoResize">
    <Grid Margin="10,10,10,10">
        <Button x:Name="SetPrintAreaButton" Content="Set Print Area"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Height="20"/>
        <ComboBox x:Name="PageSize" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="IsPrintColor" Content="UsePrintColor" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OkButton" Content="OK"  HorizontalAlignment="Right" Margin="0,0,70,10" VerticalAlignment="Bottom" Width="50" Height="20"/>
        <Button x:Name="CancelButton" Content="Cancel"  HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="50" Height="20"/>
    </Grid>
</Window>
